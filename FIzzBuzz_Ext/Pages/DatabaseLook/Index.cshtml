@page
@model FIzzBuzz_Ext.Pages.DatabaseLook.IndexModel

@using Microsoft.AspNetCore.Identity
@using FIzzBuzz_Ext.Areas.Identity.Data

@inject SignInManager<FIzzBuzz_ExtUser> SignInManager
@inject UserManager<FIzzBuzz_ExtUser> UserManager

@{
    ViewData["Title"] = "Index";
}

<h1 style="text-align: center;">10 Recent Results</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Outcome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FizzBuzz[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FizzBuzz)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Outcome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    @if (UserManager.GetUserName(User).Equals(item.Author))
                    {
                        <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
